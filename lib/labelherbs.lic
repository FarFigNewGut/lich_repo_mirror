class Herb
    @name
    @area

    def initialize(name, area)
        @name = name
        @area = area
    end

    def replace(str)
        reg = /(?<=[\s\>])#{@name}(?=[\s\.\,\<]+)/
        str.gsub(reg, "#{@name} (#{@area})")
    end
end

