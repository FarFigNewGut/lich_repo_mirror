porb_charged = false
last_orb_gem = false
current_charges = 0
item_greened = false
item_max = false
need_mana = true
last_item = false
fresh_item = true
count_flows = 0
first_porb = true
wanted_charges = nil

if script.vars[1] =~ /help|\?/
