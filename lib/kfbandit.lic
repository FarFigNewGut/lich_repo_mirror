kill_script "bigshot"	
kill_script "kffinish"
start_script "kffinish"

	result = dothis "bounty", /You have been|You are not/	
	if result =~/You have been tasked to suppress bandit activity near Widowmaker's Road near Kraken's Fall./
		echo "Widowmaker's road"
		do_client ";go2 advguard"
		pause 3
		do_client ";go2 29026"
		pause 5
		do_client ";bigshot profile load widow"
		pause 3
		fput "go south"
		do_client ";bigshot"
	elsif result =~/You have been tasked to suppress bandit activity in Black Weald near Kraken's Fall./
		echo "Black Weald"
		do_client ";go2 advguard"
		pause 3
		do_client ";go2 29026"
		pause 5
		do_client ";bigshot profile load blackweald"
		pause 3
		fput "go south"
		do_client ";bigshot"
	elsif result =~/You have been tasked to suppress bandit activity in Muddy Village near Kraken's Fall./
		echo "Muddy Village"
		do_client ";go2 advguard"
		pause 3
		do_client ";go2 29026"
		pause 5
		do_client ";bigshot profile load muddy"
		pause 3
		fput "go south"
		do_client ";bigshot"
	elsif result =~/You have been tasked to suppress bandit activity in Cliffwalk near Kraken's Fall./
		echo "Cliffwalk"
		do_client ";go2 advguard"
		pause 3
		do_client ";go2 29026"
		pause 5
		do_client ";bigshot profile load cliffwalk"
		pause 3
		fput "go south"
		do_client ";bigshot"
	elsif result =~/You succeeded in your task and should report back to the sentry just outside town./
		do_client ";go2 advguard"
		pause 3
		fput "ask luth for bounty"
		do_client ";go2 advguild"
		pause 3
		fput "ask luc for bounty"
		do_client ";go2 town"
	else
		echo "get a bounty"
		do_client ";kftask"
		
end

