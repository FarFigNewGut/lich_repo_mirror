fromwood = proc{
if variable[1].downcase =~ /debug/
echo "fromwood"
end
	if @repair_room == "Bow"
		move "up"
		pause 0.5
		move "east"
		pause 0.5
		move "east"
		if @shiptype == "manowar"
			pause 0.5
			move "east"
		end
	elsif @repair_room == "Forward"
		move "up"
		pause 0.5
		move "east"
		if @shiptype == "manowar"
			pause 0.5
			move "east"
		end
	elsif @repair_room == "Mid"
		move "up"
		pause 0.5
		move "east"
	elsif @repair_room == "Main"
		move "up"
	elsif @repair_room == "Cargo"
		next
	elsif @repair_room == "Mess"
		move "east"
	elsif @repair_room == "Crew"
		move "west"
	elsif @repair_room == "Captain"
		move "up"
		pause 0.5
		move "west"
		pause 0.5
		move "go door"
	elsif @repair_room == "Crow"
		move "up"
		pause 0.5
		move "up"
	elsif @repair_room == "FCrow"
		move "up"
		pause 0.5
		move "east"
		pause 0.5
		move "east"
		pause 0.5
		move "up"
	elsif @repair_room == "Social"
		move "east"
		pause 0.5
		move "east"
	elsif @repair_room == "Helm"
		move "up"
		pause 0.5
		move "west"
	end
}

finished = proc{
if variable[1].downcase =~ /debug/
echo "finished"
end
whereami.call
if checkleft
	fput "put left in wood"
end
if checkright
	fput "put right in wood"
end
move "up"
echo "The Hull is Repaired Captain!"
exit
}

out_wood = proc{
if variable[1].downcase =~ /debug/
echo "out_wood"
end
whereami.call
if checkleft
	fput "put left in wood"
end
if checkright
	fput "put right in wood"
end
move "up"
echo "We Are Out of Shoring Planks Captain!"
exit
}

get_wood = proc{
if variable[1].downcase =~ /debug/
echo "get_wood"
end
	waitrt?
	if checkleft and checkright
		next
	end
	result = dothistimeout "get wood", 3, /You will need a free|You search through the salvaged wood and|You search through the salvaged wood only|...wait/
	if result =~ /You will need a free/
		next
	elsif result =~ /You search through the salvaged wood and/
		waitrt?
		get_wood.call
	elsif result =~ /You search through the salvaged wood only/
		waitrt?
		out_wood.call
	elsif result =~ /...wait/
		pause 1
		waitrt?
		get_wood.call
	end
}

fix_ship = proc{
if variable[1].downcase =~ /debug/
echo "fix_ship"
end
	waitrt?
	if @fixed == true
		next 
	end
	if !checkleft and !checkright
			waitrt?
			towood.call
			get_wood.call
			fromwood.call
	end
result = dothistimeout "fix", 3, /...wait|all the damage|some of the damage|This area does not look/
	if result =~ /...wait/
		pause 1
		waitrt?
		fix_ship.call
	elsif result =~ /all the damage/
		@fixed = true
		waitrt?
		fix_ship.call
	elsif result =~ /some of the damage/
		@fixed = false
		waitrt?
		fix_ship.call
	elsif result =~ /This area does not look/
		@fixed = true
		waitrt?
		fix_ship.call
end
}

assess_damage = proc{
if variable[1].downcase =~ /debug/
echo "assess_damage"
end
	waitrt?
	result = dothistimeout "assess", 3, /It appears to be|You cannot seem to find any damage/
		if result =~ /It appears to be/
			waitrt?
			next
		elsif result =~ /You cannot seem to find any damage./
				@fixed = true
				while line = get
				if line =~ /\[Health of your ship: (.*)\/(.*)\]/
					if $1 == $2
						waitrt?
						finished.call
					else
						break
				end
			end
		end
end
}

check_rooms = proc{
if variable[1].downcase =~ /debug/
echo "check_rooms"
end
fput "assess"
		while line = get
		case line
			when /Main Deck:  You cannot seem/
				@master = true
			when /Main Deck:  It appears to be/
				@master = true
				@main = true
			when /Helm:  It appears to be/
				@helm = true
			when /Cargo Hold:  It appears to be/
				@cargo = true
			when /Captain\'s Quarters:  It appears to be/
				@captain = true
			when /Forward Crow's Nest:  It appears to be/
				@fcrow = true
			when /Crow's Nest:  It appears to be/
				@crow = true
			when /Mess Hall:  It appears to be/
				@mess = true
			when /Mid Deck:  It appears to be/
				@mid = true
			when /Crew Quarters:  It appears to be/
				@crew = true
			when /Bow:  It appears to be/
				@bow = true
			when /Social Room:  It appears to be/
				@social = true
			when /Forward Deck:  It appears to be/
				@forward = true
			when /\[Health of your ship: (.*)\/(.*)\]/
				if $1 == $2
					waitrt?
					finished.call
				end
			when /Roundtime:/
				break 
			end
			end
}

repair_sequence = proc{
if variable[1].downcase =~ /debug/
echo "repair_sequence"
end
if @master == true
	get_wood.call
	fromwood.call
	fix_ship.call
	towood.call
	next
end
if @master == false
	assess_damage.call
	fix_ship.call
end
}

ship_type = proc{
if variable[1].downcase =~ /debug/
echo "ship_type"
end
if checkroom.include?("Sloop")
	@shiptype = "sloop"
elsif checkroom.include?("Brigantine")
	@shiptype = "brigantine"
elsif checkroom.include?("Carrack")
	@shiptype = "carrack"
elsif checkroom.include?("Galleon")
	@shiptype = "galleon"
elsif checkroom.include?("Frigate")
	@shiptype = "frigate"
elsif checkroom.include?("Man O' War")
	@shiptype = "manowar"
else
	echo "Please Restart Script From Your Ship!"
	exit
end
}

