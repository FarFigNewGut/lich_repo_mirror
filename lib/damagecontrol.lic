not_master = proc{
if variable[1].downcase =~ /debug/
echo "not_master"
end
@master = false 
@main = true
@helm = true
@captain = true
@crow = true
@cargo = true
	if @shiptype == "brigantine"
		@mess = true
		@forward = true
		@crew = true
	end
	if @shiptype == "carrack"
		@bow = true
		@mess = true
		@forward = true
		@crew = true
	end
	if @shiptype == "galleon" or "frigate"
		@bow = true
		@mess = true
		@forward = true
		@crew = true
		@social = true
	end
	if @shiptype == "manowar"
		@bow = true
		@mess = true
		@forward = true
		@crew = true
		@social = true
		@mid = true
		@fcrow = true
	end
move "up"
Main_Deck.call
}

