start_repair = proc{
fput "stow all"
@done = FALSE
@next = "next_cargo"
@fix = FALSE
fput "look"
	@next = "next_cargo"
	@towood = "cargo_cargo"
	@fromwood = "cargo_wood"
while line = get
		if line =~ /(.*), Main Deck(.*)/
		main_cargo.call
		elsif line =~ /(.*), Cargo Hold(.)/
		cargo_cargo.call
		elsif line =~ /(.*), Crow\'s Nest(.)/
		which_crow.call
		elsif line =~ /(.*), Helm(.)/
		helm_cargo.call
		elsif line =~ /(.*), Captain\'s Quarters(.)/
		cq_cargo.call
		elsif line =~ /(.*)Man O\' War, Forward Deck(.)/
		mforward_cargo.call
		elsif line =~ /(.*), Forward Deck(.)/
		forward_cargo.call
		elsif line =~ /(.*)Man O\' War, Bow(.)/
		mbow_cargo.call
		elsif line =~ /(.*), Bow(.)/
		bow_cargo.call
		elsif line =~ /(.*), Mess Hall(.)/
		mess_cargo.call
		elsif line =~ /(.*), Crew Quarters(.)/
		crew_cargo.call
		elsif line =~ /(.*), Mid Deck(.)/
		mid_cargo.call
end
end
}

