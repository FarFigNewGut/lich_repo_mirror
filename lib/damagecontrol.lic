ship_type = proc{
fput "look"
while line = get
		if line =~ /(.*)(Sloop|Brigantine|Carrack|Galleon|Frigate|Man O\' War)/
			if $2 == "Sloop" 
			then
			@shiptype = "sloop"
			start_repair.call
			elsif $2 == "Brigantine"
			then
			@shiptype = "brigantine"
			start_repair.call
			elsif $2 == "Carrack"
			then
			@shiptype = "carrack"
			start_repair.call
			elsif $2 == "Galleon"
			then
			@shiptype = "galleon"
			start_repair.call
			elsif $2 == "Frigate"
			then
			@shiptype = "frigate"
			start_repair.call
			elsif $2 == "Man O\' War"
			then
			@shiptype = "manowar"
			start_repair.call
			end
end
end
}

ship_type.call
