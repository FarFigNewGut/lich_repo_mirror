respond "      ====================================================================================================================================
            *****User beware, this script is not meant for AFK use. The sea is a fickle beast and there can be unforseen events***** 
								                                                 Save The Ship Captain!
		      ==================================================================================================================================== 			"
@master = false
@main = false
@helm = false
@captain = false
@crow = false
@cargo = false
@mess = false
@social = false
@crew = false
@bow = false
@mid = false
@forward = false
@fcrow = false

