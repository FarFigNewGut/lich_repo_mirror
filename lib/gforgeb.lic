def setMaterial(material)
    if material =~ $materials or material =~ $woods
        $material = material
        $supplyCheck = /an? \w* ?(#{$material} ?)(?<type>bar|slab|block)(\.|,| and)/
        echo "material set to #{$material}"
        if $material == "bronze"
            $type = "bar"
        elsif $material =~ $woods
            $type = "block"
        else
            $type = "slab"
        end
        case $material
            when /steel|invar/
                $oil = "tempering oil"
                $oilCheck = /some oil/
            when /drakar|gornar|rhimar|zorchar|mithril|kelyn|faenor/
                $oil = "enchanted oil"
                $oilCheck = /iridescent/
            when /razern|imflass|mithglin|vaalorn|eahnor|white ora|ora/
