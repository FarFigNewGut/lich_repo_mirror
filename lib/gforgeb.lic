def forgeBest(glyph)
    best = false
    while not best

        goWorkshop() unless (checkroom =~ /Workshop(?!s)/ or checkroom =~ / Forge/)
        pause
        goForge() unless checkroom =~ / Forge/
        pause
        wearHammer()
        unless checkroom =~ /Forge/
            put "go door"
            put "out"
            pause 0.1
            Script.run "go2", "forge"
            goWorkshop()
            fput "go door"
        end

        trough = dothis "look in trough", /In the trough you see .*/


        unless trough =~ /#{$oilCheck}/
            unless trough =~ /^In the trough you see a cork plug\.S/
                fput "pull plug"
                waitrt?
                fput "drop my oil"
            end
            if $oil =~ /water/
                fput "get bucket"
            else
                buyOil() if not getOil()
                oilnoun = ""
                $oil =~ /oil/ ? oilnoun = "oil" : oilnoun = "water"
                fput "pour my #{oilnoun} in trough"

            end
        end

        getSupplies(glyph) if not getBar()

        scribe(glyph)
        tongs(glyph)

    end
end

