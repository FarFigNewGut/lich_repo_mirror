def go2(room)
    Script.run "go2", "#{room}"
end

def swap()
    swapped = false
    until swapped
        swapped = dothistimeout "swap", 5, /You swap|wait/
    end
end

def loadSupplies()
    sleep 0.1
    $supplies = dothis "look in my #{$container}", /^In the.*\.$|nothing in there/
    #echo "supplies is #{$supplies}"
    #echo "material is #{$material}"
    #echo "type is #{$type}"
end

def appraiseBest(component)
    result = dothis "appraise my #{component}", /superior|condition/
    case result
        when /superior/
            return true
        else
            exit
    end
    return false
end

