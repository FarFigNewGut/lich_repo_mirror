loop do

    2.times{fput "ask miner about ore"}
    fput "put ore in crucible"
    pause 36
    waitrt?
    waitrt?


    result = dothis "glance", /^You glance down at your empty hands\.$|^.*left hand\.$/


    case result
        when /iron|invar/
            fput "put my slab in waste"
        when /mithril/
            fput "drop my slab"
        else
            fput "stow my slab"
    end


end