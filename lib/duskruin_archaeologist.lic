def someting(item_to_sell)
	loop {
		fput "get #{item_to_sell}"
		test = matchwait "You remove", "You already", "Get what"
		words = test.split(' ')
		if words[0] == "You"
			fput "give #{item_to_sell} to archaeologist"
			waitfor "Just give me it again"
			fput "give #{item_to_sell} to archaeologist"
		elsif words[0] == "Get"
			break
		else
		end
		
	}
end

silence.call

item_list.each do |item|
     someting(item)
end
