def escape_xml(text)
  text.to_s.gsub("'", '')                     # strip apostrophes completely
           .gsub('&', '&amp;')
           .gsub('<', '&lt;')
           .gsub('>', '&gt;')
           .gsub('"', '&quot;')
end

# Load the window state from the verbwindow.yaml
