def stand
	if not standing?
		waitrt?
		fput 'stance offensive'
		fput "stand" until standing?
	end
end

def haste
	waitrt?
	waitcastrt?
	Spell[506].cast if Spell[506].affordable? unless Spell[506].active?
end

def stomp
	if Spell[909].active?
		if checkmana(5)
			fput 'stomp' if Spell[909].active?
		end
	else
		if checkmana(9)
			fput 'incant 909'
			waitcastrt?
			fput 'stomp'
		end
	end
end

