def tot_cleanup
	while GameObj.loot.any? { |obj| (obj.noun =~ /bowl|box|candleholder|cup|flowers|glass|jar|lantern|scarf|statuette|teapot|urn|vase|vial|coins/) }
		if GameObj.loot.find { |obj| (obj.noun =~ /bowl|box|candleholder|cup|flowers|glass|jar|lantern|scarf|statuette|teapot|urn|vase|vial/ )
			result = dothistimeout "get ##{obj.id}", 5, /You can't pick that up.|You gather the remaining (\d) coins.|You pick up/
			if result =~ /You can't pick that up./
			elsif result =~ /You gather the remaining (\d) coins./
			elsif result =~ /You pick up/
				tot_break(obj)
			end
			}
		elsif GameObj.loot.find { |obj| obj.noun =~ /coins/
			fput 'get coins'
			}
		end
	end
end

