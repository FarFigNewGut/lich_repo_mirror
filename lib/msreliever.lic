# Unstuns and now also uses Soothing word(Monk) to uncalm
# tags: utility, monk, uncalm, unstun, calm, stun

loop{

if(!checkcalmed|checkstunned && !checkdead && players = GameObj.pcs)
	players.each do |p|
	waitcastrt?
	
		if p.status =~ /calm/i

			if Spell[1201].known?
			wait_until{ checkmana >= 1 }
			waitrt?
			waitcastrt?
			fput "prep 1201"
			fput "cast " + p.name
			pause 3
			else
			echo "Silly, you don't know Soothing Word   !"
			exit
			end

		end

		if p.status =~ /stun/i

			if Spell[108].known?
			wait_until{ checkmana >= 8 }
			waitrt?
			waitcastrt?
			fput "prep 108"
			fput "cast " + p.name
			pause 3
			else
			echo "Silly, you don't know unstun!"
			exit
			end
	end
	pause 0.5
end
pause 1
end
}