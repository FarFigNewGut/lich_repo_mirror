				elsif match[1] == "hawk" && match[2] =~ /(((large|ruffled|sleek|small) (black|black-mantled|grey-bellied|grey-headed|red-chested|red-tailed|spot-tailed|white-bellied))|dappled broad-winged) hawk/
				elsif match[1] == "jackal" && match[2] == "rangy dappled grey jackal"
				elsif match[1] == "owl" && match[2] =~ /(((greater|lesser|ruffled|sleek) (barn|pygmy|barred|screech|bay|snowy|crested|sooty|eagle|speckled|elf|spectacled|grass|spotted|great white|striped|grey|tawny|hawk|white|horned|white-faced|maned|wood|masked))|dark-eyed grey barred) owl/
				elsif match[1] == "raven" && match[2] =~ /(large|ruffled|sleek|small|glossy coal black) raven/
				else
					foundCompanions = companionData.select{|companion| companion.CompanionDescription == match[2] && companion.CompanionType == match[1]};
					foundCompanions.each{|foundCompanion|
						server_string = server_string.sub(/#{match[2]}/, match[2] + " [#{foundCompanion.CompanionName}, #{foundCompanion.PlayerName}]")	
					}				
					if foundCompanions.count() == 0
						server_string = server_string.sub(/#{match[2]}/, match[2] + " [?]")	
					end
				end				
				
			}
		end
	end    
  end
  server_string
}

inputAction = proc{|client_string|
	if client_string =~ /companion (add|remove|list|help)[a-zA-Z0-9\- ]*/
		if client_string =~ /companion help/
			respond "-- CompanionWatch Help --"
			respond "============================================================================================"
			respond ""
			respond "  >companion add (companion owner) (companion name) (companion type) (companion description)"
			respond "  Adds a companion to the known list of companions"
			respond "  example: companion add Sesterak Rhain shrika pure white shrika"
			respond ""
			respond "  >companion remove (companion owner)"
			respond "  Removes a companion to the known list of companions"
			respond "  example: companion remove Sesterak"
			respond ""
			respond "  >companion list (companion type)"
			respond "  Lists all companions of a certain type"
			respond "  example: companion list shrika"
			respond ""
			respond "  >companion list"
			respond "  Lists all companions"
			respond "  example: companion list"
		end
		if client_string =~ /companion list raw/
			respond "-- Known Companions --"
			respond ""
			companionData.each { |companion| respond "#{companion.PlayerName} #{companion.CompanionName} #{companion.CompanionType} #{companion.CompanionDescription}" }
		elsif client_string =~ /companion list (badger|caiverine|ferret|mole|passo|boarrat|mongoose|barrowrat|rat|capybara|marmot|catamount|jaguarundi|lynx|rasper|tiger|jaguar|serval|ocelot|puma|kodkod|margay|howler|hyena|jackal|loper|wolfhound|canid|dobrem|curwolf|scrabbler|bushwag|curwolf|gyrefalcon|peregrine|saker|shrike|trakel|kestrel|osprey|screech-owl|stratis|buzzard|harrier|sea-eagle|dhole|tunnelcat|muskrat|seahawk|fox|wildcat|raccoon|vulture|kuvasz|yowler|weasel|goshawk|coyote|mudcat|cacevail|shrika|curhound|puma|rockrat|snow-owl|dobrem|snowcat|sloth|sparrowhawk|scrabbler|tiger|tothis|woodpecker|wolfhound|tunnelcat|whiskrat|falcon|greatfang|panther|graiphel|raptor|howler|snowcat|vole|albatross|banishara|cheetah|beaver|baza|coyote|leopard|sandrat|heron|fennec|lion|wolverine|karet|foxhound|mudcat|woodchuck|raven|greatfang|veercat|woodshrew|eagle|hound|bobcat|burrovine|hawk|ledisa|caracal|hedgehog|kite|mastiff|cougar|mink|owl|narmo|felid|nutria|seagull|samoyed|panther|wombat|condor|canid|jaguar|barrowrat|elf-owl|fennec|kodkod|groundhog|hawk-eagle|kuvasz|lynx|porcupine|lugger|ledisa|ocelot|vole|rowl|samoyed|veercat|whiskrat|crow|banishara|bobcat|badger|cygnet|canid|catamount|graiphel|fenvaok|dhole|leopard|mongoose|kingfisher|foxhound|rasper|sloth|swift|hyena|wildcat|wolverine|caracara|bushwag|cheetah|muzzlerat|pigeonhawk|curhound|yowler|wombat|besra|culpeo|clouded leopard|jabady|harpy eagle|jungle fox|goldencat|fossa|caligos eagle|bush dog|caligos lynx|fanaloka)/
			respond "-- Known Companions --"
			respond ""
			companionData.select{|companion| companion.CompanionType == $1}.each { |companion| respond " #{companion.CompanionName}, a #{companion.CompanionDescription}, companion to #{companion.PlayerName}" }
		elsif client_string =~ /companion list (.*)/
			respond ""
			respond "ERROR: Invalid companion type #{$1}"
		elsif client_string =~ /companion list/
			respond "-- Known Companions --"
			respond ""
			companionData.each { |companion| respond " #{companion.CompanionName}, a #{companion.CompanionDescription}, companion to #{companion.PlayerName}" }
		end
		if client_string =~ /companion add ([a-zA-Z]*) ([a-zA-Z]*) (badger|caiverine|ferret|mole|passo|boarrat|mongoose|barrowrat|rat|capybara|marmot|catamount|jaguarundi|lynx|rasper|tiger|jaguar|serval|ocelot|puma|kodkod|margay|howler|hyena|jackal|loper|wolfhound|canid|dobrem|curwolf|scrabbler|bushwag|curwolf|gyrefalcon|peregrine|saker|shrike|trakel|kestrel|osprey|screech-owl|stratis|buzzard|harrier|sea-eagle|dhole|tunnelcat|muskrat|seahawk|fox|wildcat|raccoon|vulture|kuvasz|yowler|weasel|goshawk|coyote|mudcat|cacevail|shrika|curhound|puma|rockrat|snow-owl|dobrem|snowcat|sloth|sparrowhawk|scrabbler|tiger|tothis|woodpecker|wolfhound|tunnelcat|whiskrat|falcon|greatfang|panther|graiphel|raptor|howler|snowcat|vole|albatross|banishara|cheetah|beaver|baza|coyote|leopard|sandrat|heron|fennec|lion|wolverine|karet|foxhound|mudcat|woodchuck|raven|greatfang|veercat|woodshrew|eagle|hound|bobcat|burrovine|hawk|ledisa|caracal|hedgehog|kite|mastiff|cougar|mink|owl|narmo|felid|nutria|seagull|samoyed|panther|wombat|condor|canid|jaguar|barrowrat|elf-owl|fennec|kodkod|groundhog|hawk-eagle|kuvasz|lynx|porcupine|lugger|ledisa|ocelot|vole|rowl|samoyed|veercat|whiskrat|crow|banishara|bobcat|badger|cygnet|canid|catamount|graiphel|fenvaok|dhole|leopard|mongoose|kingfisher|foxhound|rasper|sloth|swift|hyena|wildcat|wolverine|caracara|bushwag|cheetah|muzzlerat|pigeonhawk|curhound|yowler|wombat|besra|culpeo|clouded leopard|jabady|harpy eagle|jungle fox|goldencat|fossa|caligos eagle|bush dog|caligos lynx|fanaloka) ([a-zA-Z0-9\- ]*)/
			foundCompanions = companionData.select{|companion| companion.PlayerName == $1}
			if (foundCompanions.count() == 0)
				companionData.push(CompanionInformation.new($1, $2, $3, $4))
				respond ""
				respond "Companion added for #{$1}"
			else
				respond ""
				respond "ERROR: Cannot add companion for #{$1} because it already exists"
			end			
		end
		if client_string =~ /companion remove ([a-zA-Z]*)/
			foundCompanions = companionData.select{|companion| companion.PlayerName == $1}
			foundCompanions.each{|companion| companionData.delete(companion)}
			respond ""
			respond "Companion removed for #{$1}"
		end
	else
		client_string
	end	
}

