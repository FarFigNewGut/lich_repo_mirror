shutthehellup = true
announcer = /An announcer shouts,/


shutup = proc {
	action = proc { |server_string|
		if server_string =~ announcer and shutthehellup == true
			
			nil
			
		else
			
			server_string
		end
	}
		DownstreamHook.add("shutup", action)
}


loop{
sleep 1
shutup.call
before_dying { DownstreamHook.remove("shutup") }
}
