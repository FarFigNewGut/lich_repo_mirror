#!/usr/bin/env ruby
# All this does is wait for the 'YOU HAVE BEEN IDLE TOO LONG' message (waitfor is case insensitive), send a 'look' to the game, and echo a timestamp.
hide_me
no_pause_all
no_kill_all
setpriority(-2)

Script.run('repository', 'download ignore.lic', :quiet => true)
Script.start('autostart', 'add ignore', :quiet => true)
Script.start('ignore', :quiet => true)

while true
	multifput 'time','look'
	sleep 295
end
