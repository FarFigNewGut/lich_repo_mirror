  def self.with_commas(str)
    str.to_s.reverse
       .gsub(/(\d{3})(?=\d)/, '\\1,')
       .reverse
  end

  def self.format_player_list(players)
    case players.size
    when 0
      ""
    when 1
      players[0]
    else
      players[0..-2].join(", ") + " and " + players[-1]
    end
  end

