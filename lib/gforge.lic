def timeout(seconds) #in style
    pause (seconds - 5) if seconds >= 5
    echo "5" if seconds >= 5
    pause 1 if seconds >= 5
    echo "4" if seconds >= 4
    pause 1 if seconds >= 4
    echo "3" if seconds >= 3
    pause 1 if seconds >= 3
    echo "2" if seconds >= 2
    pause 1 if seconds >= 2
    echo "1" if seconds >= 1
    pause if seconds >= 1
end

