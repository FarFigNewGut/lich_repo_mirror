		AlastirLib::Reactions.clench(creature)

	#Specific Reactions
	elsif line =~ /You feel at full magical power again./
		AlastirLib::Reactions.spellup
	elsif line =~ /Your magic fizzles ineffectually./
		script_to_kill = 'waggle'
#		echo "#{script_to_kill}"
		AlastirLib::Commands.kill_script(script_to_kill)
	elsif line =~ /offers you some manna bread./
		AlastirLib::Reactions.mana_bread
	elsif line =~ /offers you/
		AlastirLib::Commands.auto_accept

	elsif line =~ /(.*) tried to join your group, but your group status is closed./
		person = $1
		AlastirLib::Reactions.auto_hold(person)
	elsif line =~ /(.*) tried to hold your hand, but your group status is closed./
		person = $1
		AlastirLib::Reactions.auto_join(person)		
	elsif line =~ /(.*) tried to hold your hand, but you are a member/
		person = $1
		AlastirLib::Reactions.auto_join(person)		

	elsif line =~ /We've noted a troubling increase in bandit activity recently./
		element = "lightning"
		AlastirLib::Commands.cast_magearmor(element)
	elsif line =~ /We'd like for you to patrol (.*) and take out any bandits you encounter./
		element = "lightning"
		AlastirLib::Commands.cast_magearmor(element)
	elsif line =~ /I've got a special mission for you./
		element = "water"
		AlastirLib::Commands.cast(element)		
	elsif line =~ /Unfortunately, I need a specific variety that only grows in (.*)/
		element = "water"
		AlastirLib::Commands.cast(element)		
	elsif line =~ /It appears they need your help in tracking down some kind of lost heirloom./
		element = "water"
		AlastirLib::Commands.cast(element)
	elsif line =~ /Hunt down the creature that attacked (?:him|her), retrieve the heirloom, and report back to me./
		element = "water"
		AlastirLib::Commands.cast(element)		
	elsif line =~ /We'd like you to cull their numbers a bit for us./
		element = "water"
		AlastirLib::Commands.cast(element)		
	elsif line =~ /I've recently received several orders from customers interested in purchasing/		
		element = "water"
		AlastirLib::Commands.cast(element)		
