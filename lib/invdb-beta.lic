  def self.generate_partials(arr, min_length = 1, concat = "");
    h = Hash.new;
    arr.each { |a|
      temp_str = a.clone;
      matchto_str = a == "inventory" ? "inv" : a;
      iter = (temp_str.length - min_length);
      h["#{temp_str}#{concat}"] = matchto_str;
      iter.times {
        temp_str.slice!(-1);
        h["#{temp_str}#{concat}"] = matchto_str if !h.key?("#{temp_str}#{concat}");
      };
    };
    return h;
  end;
