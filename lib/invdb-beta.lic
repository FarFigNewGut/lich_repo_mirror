  def self.object_find(string, _preposition = nil)
    obj = GameObj.room_desc.find { |i| i.name =~ /#{string.split(' ').join('.*?')}/ }
    obj = GameObj.loot.find { |i| i.name =~ /#{string.split(' ').join('.*?')}/ } if obj.nil?
