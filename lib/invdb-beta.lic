    prefix = $1
    setting_name = $2
    entries = $3.split(/(?:\s*[,;|]\s*)+/);
    if entries.length > 0;
      if prefix == "+"
        entries.each { |c|;
          next if c.strip.length == 0;
          if !@settings_hash[setting_name].include?(c.strip);
            Settings[setting_name].push(c.strip);
            Settings.save;
            _respond "#{Script.current.name}: #{c.strip} added to the #{setting_name} list";
