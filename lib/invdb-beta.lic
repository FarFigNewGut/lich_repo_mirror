        entries.each { |c|;
          next if c.strip.length == 0;
          if @settings_hash[setting_name].include?(c.strip);
            Settings[setting_name].delete(c.strip);
            Settings.save;
            _respond "#{Script.current.name}: #{c.strip} removed from the #{setting_name} list";
          else
            _respond "#{Script.current.name}: #{c.strip} is not on the #{setting_name} list";
          end;
        };
