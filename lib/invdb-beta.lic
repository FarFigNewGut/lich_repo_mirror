  @deplural = {
    "blades" => "blade", "branches" => "branch", "cabochons" => "cabochon",
    "essences" => "essence", "fans" => "fan", "globes" => "globe", "motes" => "mote",
    "pieces" => "piece", "rose gold fire" => "rose-gold fire", "shards" => "shard",
    "slices" => "slice", "teeth" => "tooth",
