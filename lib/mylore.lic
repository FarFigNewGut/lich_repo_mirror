			puts "<output class=\"mono\"/>#{monsterbold_start}#{spreadable}#{monsterbold_end}\r\n<output class=\"\"/>"
		else
			puts "#{monsterbold_start}#{"Lore Singing Results"}#{monsterbold_end}"
			puts "#{monsterbold_start}#{spreadable}#{monsterbold_end}"
		end
		
		debugLog(settings['debugLogging'], "sing","Dump Output for all as #{loreResults}")
	end
