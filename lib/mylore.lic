	def sing(verse_to_sing, item_to_sing, settings, languages,sungProperties,loreResults)
		#item = checkright
		item = GameObj.right_hand.name
		if item != ""
			item_to_sing = item
		end
		
		loreResults = Hash.new("loreResults")
		loopVerseOutput = nil
	  if verse_to_sing == 'all'
	  	debugLog(settings['debugLogging'], "sing","#{settings}")
	  	debugLog(settings['debugLogging'], "sing","#{languages}")
	  	debugLog(settings['debugLogging'], "sing","#{settings['try2LineFirst']}")
	  	loopStartInit += 0
	  	
	  	#need ot see if results = nill because we failed and handle that gracefully
	  	#Value
	  	loopVerseOutput = loopVerse(loreResults,settings,item_to_sing,languages,0,settings['try2LineFirst'],loopStartInit)
	  	if loopVerseOutput == nil then loopVerseOutput = {"No Value Found" => "Value"} end
			loreResults = loreResults.merge(loopVerseOutput)
			
			#Purpose
	  	loopVerseOutput = loopVerse(loreResults,settings,item_to_sing,languages,1,settings['try2LineFirst'],loopStartInit)
	  	if loopVerseOutput == nil then loopVerseOutput = {"No Purpose Found" => "Purpose"} end
			loreResults = loreResults.merge(loopVerseOutput)
			
			#Magic
	  	loopVerseOutput = loopVerse(loreResults,settings,item_to_sing,languages,2,settings['try2LineFirst'],loopStartInit)
	  	if loopVerseOutput == nil then loopVerseOutput = {"No Magic Found" => "Magic"} end
			loreResults = loreResults.merge(loopVerseOutput)
			
			#Ability
	  	loopVerseOutput = loopVerse(loreResults,settings,item_to_sing,languages,3,settings['try2LineFirst'],loopStartInit)
	  	if loopVerseOutput == nil then loopVerseOutput = {"No Ability Found" => "Ability"} end
			loreResults = loreResults.merge(loopVerseOutput)
			
			
		elsif verse_to_sing == 'value'
	  	#Value
	  	
	  	loopStartInit += 0
	  	loopVerseOutput = loopVerse(loreResults,settings,item_to_sing,languages,0,settings['try2LineFirst'],loopStartInit)
	  	if loopVerseOutput == nil then loopVerseOutput = {"No Value Found" => "Value"} end
			loreResults = loreResults.merge(loopVerseOutput)
					  
		elsif verse_to_sing == 'purpose'
			#Purpose
	  	
	  	loopStartInit += 0
	  	loopVerseOutput = loopVerse(loreResults,settings,item_to_sing,languages,1,settings['try2LineFirst'],loopStartInit)
	  	if loopVerseOutput == nil then loopVerseOutput = {"No Purpose Found" => "Purpose"} end
			loreResults = loreResults.merge(loopVerseOutput)
							   
		elsif verse_to_sing == 'magic'
	  	#Magic
	  	loopStartInit += 0
	  	loopVerseOutput = loopVerse(loreResults,settings,item_to_sing,languages,2,settings['try2LineFirst'],loopStartInit)
	  	if loopVerseOutput == nil then loopVerseOutput = {"No Magic Found" => "Magic"} end
			loreResults = loreResults.merge(loopVerseOutput)
						
	   
		elsif verse_to_sing == 'ability'
	  	#Ability
	  	loopStartInit += 0
	  	loopVerseOutput = loopVerse(loreResults,settings,item_to_sing,languages,3,settings['try2LineFirst'],loopStartInit)
	  	if loopVerseOutput == nil then loopVerseOutput = {"No Ability Found" => "Ability"} end
			loreResults = loreResults.merge(loopVerseOutput)
	  	
	  elsif verse_to_sing == 'reset'
	  	
	  
		else
	    echo ".....| Command:  ';loresing all <item>'"
	    echo ".....| Command:  ';loresing value <item>'"
	    echo ".....| Command:  ';loresing purpose <item>'"
	    echo ".....| Command:  ';loresing magic <item>'"
	    echo ".....| Command:  ';loresing ability <item>'"
	    echo ".....| Command:  ';loresing setup' to configure your verses"
	    
		end
	
		#return loreResults
		fput "speak common"
		resultType = ""
		response = ""
		spreadable = ""
		if loreResults != nil
			response = "The below properties were found for your #{item}\r\n"
			spreadable = "#{item},#{GameObj.right_hand.id}"
			for loreResult in loreResults.sort_by{ |k, v| v }.reverse.to_h
				#set header by section
				if loreResult[1].to_s != resultType
					resultType = loreResult[1] 
					response += "#{loreResult[1]}\r\n"
					spreadable += ","
				else
					spreadable += ";"
				end
				response += "#{loreResult[0].to_s}\r\n"
				spreadable += loreResult[0].to_s
					
			end
