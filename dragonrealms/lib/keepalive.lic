#!/usr/bin/env ruby
# All this does is wait for the 'YOU HAVE BEEN IDLE TOO LONG' message (waitfor is case insensitive), send a 'look' to the game, and echo a timestamp.

setpriority(-2)
n = 0
while true
	waitfor "you have been idle too long"
	fput "look"
	n += 1
	echo "TIMESTAMP ##{n}: #{Time.now}"
end
